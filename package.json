{
  "name": "MenubarCMD",
  "version": "0.0.2",
  "description": "Run command from menubar",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "build": "node_modules/.bin/electron-builder"
  },
  "repository": "",
  "author": "jimqlee",
  "license": "MPLv2",
  "dependencies": {
    "electron-i18n": "^1.3136.0",
    "i18n": "^0.15.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "electron": "21.1.0",
    "electron-builder": "23.6.0",
    "eslint": "8.25.0",
    "got": "12.5.1"
  },
  "build": {
    "appId": "lab.lee",
    "productName": "MenubarCMD",
    "directories": {
      "output": "build"
    },
    "mac": {
      "target": "dmg",
      "icon": "./assets/CMD.icns",
      "category": "public.app-category.developer-tools",
      "type": "distribution"
    },
    "dmg": {
      "backgroundColor": "#fff",
      "icon": "./assets/CMD.icns"
    }
  }
}
