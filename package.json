{
  "name": "MenubarCMD",
  "version": "0.0.1",
  "description": "Run command from menubar",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "build": "../electron-builder/node_modules/.bin/electron-builder"
  },
  "repository": "",
  "author": "jimqlee",
  "license": "MPLv2",
  "dependencies": {
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "eslint": "4.17.0"
  },
  "build": {
    "appId": "lab.lee",
    "productName": "MenubarCMD",
    "directories": {
      "output": "build"
    },
    "mac": {
      "target": "dmg",
      "icon": "./assets/CMD.icns",
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "backgroundColor": "#fff"
    }
  }
}
